<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- BotÃ³n para agregar un nuevo historial de enfermedad -->
    <Button
        android:id="@+id/addButtonHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Historial"
        android:layout_gravity="center_horizontal" />

    <!-- RecyclerView para mostrar la lista de historiales de enfermedades -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHistorial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp" />
</LinearLayout>
