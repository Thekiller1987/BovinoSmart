<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/root">

    <EditText
        android:id="@+id/edittext_nombre_enfermedad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Enfermedad"/>

    <EditText
        android:id="@+id/edittext_descripcion_enfermedad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DescripciÃ³n"/>

    <Button
        android:id="@+id/button_guardar_enfermedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"/>

    <Button
        android:id="@+id/button_eliminar_enfermedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:layout_marginTop="16dp"/>

</LinearLayout>
