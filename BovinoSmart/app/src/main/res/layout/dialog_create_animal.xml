<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context=".animales.GestionAnimalesActivity">

    <!-- ScrollView para hacer el contenido desplazable -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewAnimales1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestión de Animales"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp" />

            <!-- Nombre del animal -->
            <EditText
                android:id="@+id/nombreAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del animal"
                android:padding="10dp" />

            <!-- Código ID del animal -->
            <EditText
                android:id="@+id/codigoAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Código ID"
                android:padding="10dp" />

            <!-- Raza del animal -->
            <EditText
                android:id="@+id/razaAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Raza"
                android:padding="10dp" />

            <!-- Peso actual del animal -->
            <EditText
                android:id="@+id/pesoActualAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Peso actual"
                android:padding="10dp"
                android:inputType="numberDecimal" />

            <!-- Fecha de nacimiento del animal -->
            <EditText
                android:id="@+id/fechaNacimientoAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de nacimiento"
                android:padding="10dp" />

            <!-- Selección de sexo con RadioButton en Horizontal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexo"
                android:textSize="16sp"
                android:paddingTop="10dp"/>

            <RadioGroup
                android:id="@+id/sexoRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioVaca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaca" />

                <RadioButton
                    android:id="@+id/radioToro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toro"
                    android:layout_marginStart="20dp" />
            </RadioGroup>

            <!-- Botón para seleccionar la imagen -->
            <Button
                android:id="@+id/selectImageButtonAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar Imagen"
                android:layout_marginTop="10dp" />

            <!-- Vista de la imagen del animal -->
            <ImageView
                android:id="@+id/imageViewAnimal"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp" />

            <!-- Botón para guardar animal -->
            <Button
                android:id="@+id/guardarAnimalButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- RecyclerView para listar animales -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAnimales1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintBottom_toTopOf="@id/addButtonAnimal1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para agregar animal -->
    <ImageButton
        android:id="@+id/addButtonAnimal1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Agregar Animal"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
