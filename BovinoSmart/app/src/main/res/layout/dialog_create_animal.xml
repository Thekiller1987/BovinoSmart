<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#A8D08D">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/rounded_background"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewAnimal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_upload"
            android:background="@drawable/rounded_image_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Animal:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextNombreAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Animal"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Género:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerSexoAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_spinner_background"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código Único:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextCodigoIdVaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Código ID de la Vaca"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Nacimiento:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextFechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Nacimiento"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raza:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextRazaAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Raza"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observaciones:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Observaciones"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peso al Nacimiento (kg):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextPesoNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso al Nacimiento (kg)"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peso al Destete (kg):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextPesoDestete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso al Destete (kg)"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peso Actual (kg):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextPesoActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso Actual (kg)"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado (Vivo/Muerto):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estado (Vivo/Muerto)"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <CheckBox
            android:id="@+id/checkBoxInseminacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inseminación"
            android:layout_marginTop="8dp" />

        <!-- Botón para guardar el animal -->
        <Button
            android:id="@+id/btnGuardarAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Animal"
            android:background="@drawable/rounded_button"
            android:textColor="#ffffff"
            android:layout_marginTop="24dp"
            android:textStyle="bold" />

        <!-- Nuevo botón para eliminar el animal -->
        <Button
            android:id="@+id/btnEliminarAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Animal"
            android:background="@drawable/rounded_button"
            android:textColor="#ff0000"
        android:layout_marginTop="12dp"
        android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
