<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos del Animal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editTextNombreAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Animal" />

        <Spinner
            android:id="@+id/spinnerSexoAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextCodigoIdVaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Código ID de la Vaca" />

        <EditText
            android:id="@+id/editTextFechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Nacimiento" />

        <EditText
            android:id="@+id/editTextRazaAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Raza" />

        <EditText
            android:id="@+id/editTextObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Observaciones" />

        <EditText
            android:id="@+id/editTextPesoNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso al Nacimiento (kg)" />

        <EditText
            android:id="@+id/editTextPesoDestete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso al Destete (kg)" />

        <EditText
            android:id="@+id/editTextPesoActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso Actual (kg)" />

        <EditText
            android:id="@+id/editTextEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estado (Vivo/Muerto)" />

        <CheckBox
            android:id="@+id/checkBoxInseminacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inseminación" />

        <Button
            android:id="@+id/buttonSeleccionarImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Imagen" />

        <ImageView
            android:id="@+id/imageViewAnimal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/btnGuardarAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Animal"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
