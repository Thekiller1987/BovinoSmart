<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp">


    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp" />

    <!-- Formulario con borde verde -->
    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:elevation="4dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_green_rounded">

        <!-- Campos de entrada -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter email or username"
            android:background="@drawable/input_border"
            android:padding="15dp"
            android:textColorHint="#A9A9A9"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/input_border"
            android:padding="15dp"
            android:textColorHint="#A9A9A9"
            android:layout_marginBottom="10dp" />

        <!-- Este campo solo se muestra si es registro -->
        <EditText
            android:id="@+id/confirmPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:background="@drawable/input_border"
            android:padding="15dp"
            android:textColorHint="#A9A9A9"
            android:visibility="gone"
            android:layout_marginBottom="10dp" />

        <!-- Botón de Iniciar sesión o Crear cuenta -->
        <Button
            android:id="@+id/loginOrRegisterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:backgroundTint="#587A83"
            android:textColor="#FFF"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded" />

    </LinearLayout>

    <!-- Enlace para cambiar entre Iniciar Sesión y Crear Cuenta -->
    <TextView
        android:id="@+id/toggleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No tienes cuenta? Crear cuenta"
        android:textColor="#587A83"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/formContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
