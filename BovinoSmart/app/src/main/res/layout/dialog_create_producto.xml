<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#A8D08D">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/rounded_background"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewProducto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_upload"
            android:background="@drawable/rounded_image_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Seleccionar Imagen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del producto:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/nombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del producto"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de producto:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/tipoProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de producto"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosis recomendada:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/dosisProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dosis recomendada"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frecuencia de aplicación:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/frecuenciaProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Frecuencia de aplicación"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Motivo:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/motivoProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Motivo"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <CheckBox
            android:id="@+id/esTratamientoCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Es tratamiento"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/guardarProductoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:background="@drawable/rounded_button"
            android:textColor="#ffffff"
            android:layout_marginTop="24dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
