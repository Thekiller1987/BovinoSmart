<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context=".animales.GestionAnimalesActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Gestión de Animales"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Campo de búsqueda para filtrar animales -->
    <EditText
        android:id="@+id/searchInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Buscar animales"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintWidth_percent="0.9" />

    <!-- Botones para separar vacas y toros -->
    <LinearLayout
        android:id="@+id/animalButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchInput">

        <Button
            android:id="@+id/vacasButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vacas" />

        <Button
            android:id="@+id/torosButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Toros" />
    </LinearLayout>

    <!-- RecyclerView para listar animales -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAnimales1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animalButtonsContainer" />

    <!-- Botón de agregar animal -->
    <ImageButton
        android:id="@+id/addButtonAnimal1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Agregar Animal"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Menú desplegable con botones de opciones -->
    <LinearLayout
        android:id="@+id/menuDesplegable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_background"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/addButtonAnimal1"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnHistorialProductos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial de Productos" />

        <Button
            android:id="@+id/btnHistorialEnfermedades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial de Enfermedades" />

        <Button
            android:id="@+id/btnControlBanos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control de Baños" />

        <Button
            android:id="@+id/btnInseminacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inseminación" />

        <Button
            android:id="@+id/btnCrearAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Animal" />

        <!-- Botón de Producción de Leche -->
        <Button
            android:id="@+id/btnProduccionLeche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producción de Leche" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
