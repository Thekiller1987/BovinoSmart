<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".animales.GestionAnimalesActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Gestión de Animales:"
        android:textColor="#ffffff"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenedor para la barra de búsqueda -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="286dp"
        android:layout_height="42dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/search_bar_background"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@+id/btnBuscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintWidth_percent="0.65">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Buscar animales"
            android:padding="8dp"
            android:textColor="#000000" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="32dp"
            android:layout_height="42dp"
            android:background="@android:color/transparent"
            android:contentDescription="Buscar"
            android:src="@drawable/lupa" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/rounded_button"
        android:text="Buscar"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchContainer"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <LinearLayout
        android:id="@+id/animalButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchContainer">

        <Button
            android:id="@+id/vacasButton1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_button"
            android:text="Vacas"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginEnd="80dp" />

        <Button
            android:id="@+id/torosButton1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_button"
            android:text="Toros"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- RecyclerView para listar animales -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAnimales1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animalButtonsContainer" />

    <!-- Botón de agregar animal -->
    <ImageButton
        android:id="@+id/addButtonAnimal1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_button"
        android:contentDescription="Agregar Animal"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Menú desplegable con botones de opciones -->
    <LinearLayout
        android:id="@+id/menuDesplegable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/addButtonAnimal1"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnHistorialProductos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial de Productos" />

        <Button
            android:id="@+id/btnHistorialEnfermedades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial de Enfermedades" />

        <Button
            android:id="@+id/btnControlBanos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control de Baños" />

        <Button
            android:id="@+id/btnInseminacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inseminación" />

        <Button
            android:id="@+id/btnCrearAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Animal" />

        <Button
            android:id="@+id/btnProduccionLeche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producción de Leche" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
