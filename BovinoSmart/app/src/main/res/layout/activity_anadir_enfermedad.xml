<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnadirEnfermedad">

    <EditText
        android:id="@+id/edittext_nombre_enfermedad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre de la enfermedad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/edittext_descripcion_enfermedad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="DescripciÃ³n de la enfermedad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittext_nombre_enfermedad"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/button_agregar_enfermedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Enfermedad"
        app:layout_constraintTop_toBottomOf="@id/edittext_descripcion_enfermedad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
