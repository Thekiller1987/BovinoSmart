<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos para acceder a la galería y la cámara -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Configuración de las versiones de Android para compatibilidad con el acceso al almacenamiento externo -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.BovinoSmart"
        tools:targetApi="31">

        <!-- Actividad de gestión de productos -->
        <activity
            android:name=".producto.GestionProductos"
            android:exported="false"
            android:label="Gestión de Productos" />

        <!-- Actividad de gestión de animales -->
        <activity
            android:name=".animales.GestionAnimalesActivity"
            android:exported="false"
            android:label="Gestión de animales" />

        <!-- Actividad de gestión de enfermedades -->
        <activity
            android:name=".Enfermedades.GestionEnfermedades"
            android:exported="false" />

        <!-- Actividad de menú -->
        <activity
            android:name=".menu"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.BovinoSmart.Fullscreen" />

        <!-- Actividad de login -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BovinoSmart" />
    </application>

</manifest>
